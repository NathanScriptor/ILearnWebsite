@{
    ViewBag.Title = "Dashboard-AddLecturer";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm giảng viên</h1>
                <form action="@Url.Action("AddNewLecturer","Lecturer")" method="post">
                    <div class="row">
                        <label class="label-style">Tên giảng viên <span style="color: red">*</span></label>
                        <input class="input-style input-lg" type="text" name="name" placeholder="Nhập tên giảng viên..." />
                    </div>
                    <div class="row">
                        <label class="label-style">Email <span style="color: red">*</span></label>
                        <input class="input-style input-lg" type="email" name="email" placeholder="Nhập email..." />
                    </div>
                    <div class="row">
                        <label class="label-style">Chú thích</label>
                        <textarea name="description" class="textarea-style ml-2" cols="122" rows="16" placeholder="Nhập chú thích..."></textarea>
                    </div>
                    <div class="row">
                        <label class="label-style">Số điện thoại <span style="color: red">*</span></label>
                        <input class="input-style input-lg" type="tel" name="phone" placeholder="Nhập số điện thoại..." />
                    </div>
                    <div class="row">
                        <label class="label-style">Image Link</label>
                        <input class="input-style input-lg" type="text" name="img" placeholder="Nhập image link..." />
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>
</div>

