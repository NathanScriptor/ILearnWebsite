@model List<ILEARN.Models.Lecturer>
@using ILEARN.Models;

@{
    ViewBag.title = "Dashboard-LecturerList";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách giảng viên</h1>
                <table class="table">
                    <tr>
                        <th>STT</th>
                        <th>Tên giảng viên</th>
                        <th>Email</th>
                        <th>Chú thích</th>
                        <th>Số điện thoại</th>
                        <th>Image Link</th>
                        <th>Chức năng</th>
                    </tr>
                    @{
                        var i = 1;
                        foreach (Lecturer l in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@l.LecturerName</td>
                                <td>@l.Email</td>
                                <td>@l.Description</td>
                                <td>@l.Phone</td>
                                <td>@l.Img</td>
                                <td>
                                    <button class="btn btn-info">Sửa</button>
                                    <button class="btn btn-danger">Xóa</button>
                                </td>
                            </tr>
                            i += 1;
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>
